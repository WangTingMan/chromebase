        "ipc/ipc_mojo_param_traits.cc",
        "ipc/ipc_platform_file_attachment_posix.cc",
        "ipc/native_handle_type_converters.cc",
    ],

    cflags: [
        "-DMOJO_CORE_LEGACY_PROTOCOL",
        "-Wall",
        "-Werror",
        "-Wno-missing-field-initializers",
